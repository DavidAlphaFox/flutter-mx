(defmacro with-flutter-ref [& body]
  `(call-with-flutter-ref ~'me ~'ctx (fn [] ~@body)))

(defmacro with-widget [[me ctx] & body]
  `(call-with-flutter-ref ~me ~ctx (fn [] ~@body)))

(defn flutter-ref [me]
