(defmacro fmu [name & [me]]
  (let [me-ref (or me 'me)]
    `(let [name# ~name]
       (fm-navig #(= name# (mget? % :name))
         ~me-ref :me? false :up? true :inside? false))))

(defmacro fmuinc [name & [me]]
  ;; fmu "inclusive" of the starting node "me"
  (let [me-ref (or me 'me)]
    `(let [name# ~name]
       (fm-navig #(= name# (mget? % :name))
         ~me-ref :me? true :up? true :inside? false))))

(defmacro fasc "Search strictly up"
  [name & [me]]
  (let [me-ref (or me 'me)]
    `(let [name# ~name]
       (tiltontec.matrix.model.core/fm-ascendant name# ~me-ref))))

(defn faprop "Search strictly up and mget value of first asc w that property"
  ([prop-name md]
   (faprop prop-name md md))
  ([prop-name md start]
   (cond
     (contains? @md prop-name)
     (mget md prop-name)
     :else (if-let [par (mpar md)]
             (recur prop-name par start)
             (mx-throw (str "faprop> did not find model with property " prop-name
                            " searching up from " (tiltontec.matrix.model.peek/mname md)
                            " seeking property " ~prop-name " value."))))))

(defmacro fmav "Search strictly up and mget value"
  [name prop-name & [me]]
  (let [me-ref (or me 'me)]
    `(let [name# ~name
           md# (tiltontec.matrix.model.core/fm-ascendant name# ~me-ref)]
       (if (nil? md#)
         (mx-throw (str "fascv> did not find model " name#
                     " searching up from " (tiltontec.matrix.model.peek/mname md#)
                     " seeking property " ~prop-name " value."))
         (if (contains? @md# ~prop-name)
           (tiltontec.matrix.model.core/mget md# ~prop-name)
           (mx-throw (str "fascv> " ~name " lacks " ~prop-name " property")))
         (mget md# ~prop-name)))))

(defn fmo [me id-name]
  (or (mxu-find-name me id-name)
    (mxu-find-id me id-name)
    (mx-throw (str "fmo> not id or name " id-name))))

(defn fmov
  ([me id-name]
   (fmov me id-name :value))
  ([me id-name prop-name]
   (when-let [mx (fmo me id-name)]
     (if (contains? @mx prop-name)
       (mget mx prop-name)
       (mx-throw (str "fmov> " id-name " lacks " prop-name " property"))))))

(defmacro fm* [name & [me]]
  (let [me-ref (or me 'me)]
    `(let [name# ~name]
       (tiltontec.matrix.model.core/fm-navig
         #(do (= name# (mget? % :name)))
         ~me-ref :me? true :up? true :inside? true))))

(defmacro fm*val [name & [prop me]]
  (let [prop (or prop ':value)
        me-ref (or me 'me)]
    `(let [other# (tiltontec.matrix.model.core/fm-navig (fn [node#] (= ~name (tiltontec.matrix.model.core/mget? node# :name)))
                    ~me-ref :me? true :up? true :inside? true)]
       (tiltontec.matrix.model.peek/chk other# (str "fm*val did not find other named " ~name " seeking property " ~prop))
       (tiltontec.matrix.model.core/mget other# ~prop))))

(defmacro fmuv [name prop & [me]]
  (let [me-ref (or me 'me)]
    `(let [other# (tiltontec.matrix.model.core/fm-navig (fn [node#] (= ~name (mget? node# :name)))
                    ~me-ref :me? false :up? true :inside? false)]
       (tiltontec.matrix.model.peek/chk other# (str "fmuv> did not find other named " ~name " seeking property " ~prop))
       (tiltontec.matrix.model.core/mget other# ~prop))))

(defmacro fmuval [name & [prop me]]
  (let [prop (or prop ':value)
        me-ref (or me 'me)]
    `(let [other# (tiltontec.matrix.model.core/fm-navig (fn [node#] (= ~name (mget? node# :name)))
                    ~me-ref :me? false :up? true :inside? false)]
       (tiltontec.matrix.model.peek/chk other# (str "fmuv> did not find other named " ~name " seeking property " ~prop))
       (tiltontec.matrix.model.core/mget other# ~prop))))

(defn mxu-find-id
  "Search up the matrix from node 'where' looking for element with given id"
  [where id]
  (fm-navig #(= id (mget % :id))
    where :me? false :up? true :inside? false))

