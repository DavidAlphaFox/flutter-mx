(defmacro with-mx-isolation [& body]
  `(binding [tiltontec.matrix.cell.base/*within-integrity* nil
             tiltontec.matrix.cell.base/*depender* nil
             tiltontec.matrix.cell.base/*defer-changes* false
             tiltontec.matrix.cell.base/*call-stack* nil]
     ~@body))

(defmacro def-mx-props [reader-prefix & slots]
  `(do
     ~@(map (fn [prop#]
              `(defn ~(symbol (str (or reader-prefix "")
                                prop#))
                 [~'ref]
                 (tiltontec.matrix.model.core/mget ~'ref ~(keyword prop#)))) slots)))

