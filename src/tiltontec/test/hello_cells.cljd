(ns tiltontec.test.hello-cells
  (:require
    [tiltontec.util.base
     :refer [trx dp prog1 *trx?* dp]]
    [tiltontec.util.core :refer [ err]]
    [tiltontec.cell.base
     :refer [without-c-dependency
             cells-init c-optimized-away? c-formula? c-value c-optimize
             c-unbound? c-input?
             c-model mdead? c-valid? c-useds c-ref? md-ref?
             c-state +pulse+ c-pulse-observed
             *call-stack* *defer-changes* unbound
             c-rule c-me c-value-state c-callers
             unlink-from-callers *causation*
             c-prop-name c-synaptic?
             c-pulse c-pulse-last-changed c-ephemeral? c-prop c-props
             *depender* *not-to-be*
             *c-prop-depth* md-prop-owning? c-lazy] :as cty]
    [tiltontec.cell.integrity :refer [with-integrity]]
    [tiltontec.cell.observer
     :refer [ fn-obs]]
    [tiltontec.cell.core
     :refer [cF cF+ c-reset-next! cFonce cFn cI creset! make-cell make-c-formula]]
    [tiltontec.cell.evaluate :refer [cget c-awaken]]))

(defn hw-01 []
  (let [v ;;"visitor"
        {:name "World"
         :action (make-cell :value "knocks"
                   :input? true)}]

    (dp :hw01 v)

    (dp :name (cget (:name v)))

    (dp :name-act (cget (:name v))
      (cget (:action v)))



    (assert (=  (cget (:name v)) "World"))
    (assert (=  (cget (:action v)) "knocks"))))

(defn hw-02 []
  (let [obs-action (atom nil)
        v ;;"visitor"
        {:name "World"
         :action (cI nil
                   :prop :v-action
                   :watch ;; short for observer
                   (fn [prop me new old c]
                     (reset! obs-action new)
                     (dp :observing prop new old)))}]
    (assert (=  (cget (:name v)) "World"))
    (creset! (:action v) "knocks")
    (assert (=  (cget (:action v)) "knocks"))
    (assert (= "knocks" @obs-action))))

(defn hw-03 []
  (let [action (atom nil)
        obs-action (fn [prop me new old c]
                     (reset! action new)
                     (dp :observing prop new old))
        v {:name "World"
           :action (cI nil :prop :v-action
                     :watch obs-action)}]

    (assert (nil? (cget (:action v))))
    (assert (nil? @action))

    (creset! (:action v) "knock-knock")
    (assert (= "knock-knock" @action))
    (assert (= (cget (:action v)) "knock-knock"))))

(defn gobs [prop me new old c]
  (dp :gobs> prop new old))

(defn hw-04 []
  (let [r-action (cI nil
                   :prop :r-action
                   :watch gobs)
        r-loc (make-c-formula
                :prop :r-loc
                :watch gobs
                :rule (fn [c]
                        (case (cget r-action)
                          :leave :away
                          :return :at-home
                          :missing)))]
    (c-awaken r-loc)
    (assert (= :missing (:value @r-loc)))
    (dp :---about-to-leave------------------)
    (creset! r-action :leave)
    (dp :---left------------------)
    (assert (= :away (cget r-loc)))))

(defn hw-05 []
  (dp :--go------------------)
  (let [obs-action (fn [prop me new old c]
                     (dp prop new old))
        v {:name "World"
           :action (cI nil :prop :v-action
                     :watch obs-action)}
        r-action (cI nil)
        r-loc (cF+ [:watch (fn-obs (when new (trx :honey-im new)))]
                (case (cget r-action)
                  :leave :away
                  :return :home
                  :missing))
        r-response (cF+ [:watch (fn-obs (trx :r-resp new))]
                     (when (= :home (cget r-loc))
                       (when-let [act (cget (:action v))]
                         (case act
                           :knock-knock "hello, world"))))]
    (assert (nil? (cget r-response)))
    (creset! (:action v) :knock-knock)
    (creset! r-action :return)
    (assert (= :home (cget r-loc)))))

(defn hello-world []
  (dp :--go------------------)
  (let [obs-action (fn [prop me new old c]
                     (dp prop new old))
        v {:name "World"
           :action (cI nil
                     :prop :v-action
                     :ephemeral? true
                     :watch obs-action)}
        r-action (cI nil)
        r-loc (cF+ [:watch (fn-obs (when new (trx :honey-im new)))]
                (case (cget r-action)
                  :leave :away
                  :return :home
                  :missing))
        r-response (cF+ [:watch (fn-obs (trx :r-response new))
                         :ephemeral? true]
                     (when (= :home (cget r-loc))
                       (when-let [act (cget (:action v))]
                         (case act
                           :knock-knock "hello, world"))))]
    (assert (nil? (cget r-response)))
    (creset! (:action v) :knock-knock)
    (creset! r-action :return)
    (assert (= :home (cget r-loc)))
    (creset! (:action v) :knock-knock)))

(defn hello-world-2 []
  (dp :--go------------------)
  (let [obs-action (fn [prop me new old c]
                     (when new (trx visitor-did new)))
        v {:name "World"
           :action (cI nil
                     :prop :v-action
                     :ephemeral? true
                     :watch obs-action)}
        r-action (cI nil)
        r-loc (cF+ [:watch (fn-obs (when new (trx :honey-im new)))]
                (case (cget r-action)
                  :leave :away
                  :return :home
                  :missing))
        r-response (cF+ [:watch (fn-obs (when new
                                        (trx :r-response new)))
                         :ephemeral? true
                         ]
                     (when (= :home (cget r-loc))
                       (when-let [act (cget (:action v))]
                         (case act
                           :knock-knock "hello, world"))))
        alarm (cF+ [:watch (fn-obs
                           (trx :telling-alarm-api new))]
                (if (= :home (cget r-loc)) :off :on))
        alarm-do (cF+ [:watch (fn-obs
                              (case new
                                :call-police (trx :auto-dialing-911)
                                nil))]
                   (when (= :on (cget alarm))
                     (when-let [action (cget (:action v))]
                       (case action
                         :smashing-window :call-police
                         nil))))]
    (map c-awaken [alarm-do r-response r-loc (:action v)])
    (assert (= :missing (:value @r-loc)))
    (creset! (:action v) :knock-knock)
    (creset! (:action v) :smashing-window)
    (creset! r-action :return)
    (assert (= :home (cget r-loc)))
    (creset! (:action v) :knock-knock)))

(defn run-tests []
  (hw-01)
  (hw-02)
  (hw-03)
  (hw-04)
  (hw-05)
  (hello-world)
  (dp :hello-cells-OK))

